<?xml version="1.0" encoding="UTF-8"?>

<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Krypta.Views.PortfolioAddPage"
    Title="Add to portfolio">
    
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="Picker" Margin="20,20,20,20" ItemDisplayBinding="{Binding Name}" Title="Choose cryptocurrency" />
            <Entry x:Name="Entry" Margin="20,20,20,20" Placeholder="Enter amount" Keyboard="Numeric" />
            <Button Text="Add to portfolio" Clicked="OnSaveButton_Clicked" BackgroundColor="Transparent" TextColor="#e85d04" 
                    CornerRadius="5" Margin="50,0,50,0" FontSize="18"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>